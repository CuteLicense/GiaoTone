<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="@dimen/paddingHeader"
        android:text="@string/click_me_for_help"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textSizeFAQTitle"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:gravity="start"
        android:paddingStart="@dimen/paddingNormal"
        android:paddingEnd="@dimen/paddingNormal"
        android:text="@string/click_me_for_help"
        android:textColor="@color/colorHeader"
        android:textSize="@dimen/textSizeFAQContent"
        android:textStyle="bold" />

</RelativeLayout>
